{
  "extends": "./tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "module": "NodeNext",
    "jsx": "preserve",
    "moduleResolution": "nodenext",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
